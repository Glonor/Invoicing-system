<div class="card-body ">
  <%= bootstrap_form_for(@client) do |f| %>
    <div class="row ">
      <div class="col-md-3 mb-3">
        <h5>Edit client informations</h5>
      </div>
      <div class="col-md-2 mb-3">
        <label for="inputFirstName" class="sr-only">First Name</label>
        <%= f.text_field :first_name%>
      </div>
      <div class="col-md-2 mb-3">
        <label for="inputLastName" class="sr-only">Last Name</label>
        <%= f.text_field :last_name %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 mb-3"></div>
      <div class="col-md-4 mb-3">
        <label for="inputEmail" class="sr-only">Email address</label>
        <%= f.email_field :email %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 mb-3"></div>
      <div class="col-md-4 mb-3">
        <button class= "btn btn-raised btn-primary" id="btn-submit" type="submit">Save changes</button>
      </div>
    </div>
  <% end %>
</div>
<div class="card-footer">
<div class="row">
  <%= button_to 'Show', @client, class:"btn btn-primary", method: :get  %>

    <%= button_to 'Back', clients_path, class:"btn btn-primary", method: :get  %>

</div>
</div>

