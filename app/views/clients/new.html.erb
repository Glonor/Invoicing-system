<div class="card material-table">
  <div class="card-body ">
    <%= bootstrap_form_for(@client) do |f| %>
      <div class="row ">
        <div class="col-md-3 mb-3">
          <h5>New client</h5>
        </div>
        <div class="col-md-2 mb-3">
          <%= f.text_field :first_name, label_class: "bmd-label-floating"%>
        </div>
        <div class="col-md-2 mb-3">
          <%= f.text_field :last_name, label_class: "bmd-label-floating" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 mb-3"></div>
        <div class="col-md-4 mb-3">
          <%= f.email_field :email, label_class: "bmd-label-floating" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3 mb-3"></div>
        <div class="col-md-4 mb-3">
          <button class= "btn btn-raised btn-primary" id="btn-submit" type="submit">Save changes</button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="card-footer">
    <div class="row">
      <%= link_to 'Back', clients_path, class:"btn btn-primary"  %>
    </div>
  </div>
</div>

