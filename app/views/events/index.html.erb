<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Billed</th>
      <th>Start</th>
      <th>End</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.billed %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.client %></td>
        <td><%= link_to 'Show', client_event_path(event.client, event) %></td>
        <td><%= link_to 'Edit', edit_client_event_path(event.client, event) %></td>
        <td><%= link_to 'Destroy', client_event_path(event.client, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

