<p id="notice"><%= notice %></p>

<div class="card material-table">
  <div class="table-header">
    <h5>Invoices</h5>

  </div>
  <table class="table" id="dttb">
    <thead>
    <tr>
      <th>Client</th>
      <th>Issue date</th>
      <th>Total amount</th>
      <th colspan="1"></th>
    </tr>
    </thead>
    <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.client %></td>
        <td><%= invoice.issue_date %></td>
        <td><%= invoice.total_amount %></td>
        <td class="right-align">
          <div class="btn-group">
            <button class="btn bmd-btn-icon dropdown-toggle" type="button" id="ex3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="material-icons">more_vert</i>
            </button>
            <div class="dropdown-menu  dropdown-menu-left" aria-labelledby="ex3">
              <%= link_to 'Show', invoice, class: "dropdown-item" %>
              <%= link_to "PDF", invoice_path(invoice, format: 'pdf'), class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Delete', invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>