<p id="notice"><%= notice %></p>


<div class="card material-table">
  <div class="card-body">
    <p>
      <strong>Client:</strong>
      <%= @invoice.client %>
    </p>

    <p>
      <strong>Issue date:</strong>
      <%= date_formatter @invoice.issue_date %>
    </p>

    <p>
      <strong>Total amount:</strong>
      <%= number_to_currency(@invoice.total_amount) %>
    </p>
    <%= link_to "PDF", invoice_path(@invoice, format: 'pdf'), class:"btn btn-danger" %>
  </div>
  <table class="table" id="dttb">
    <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Amount</th>
    </tr>
    </thead>
    <tbody>
    <% @invoice.services.each do |service| %>
      <tr>
        <td><%= service.title %></td>
        <td><%= service.description %></td>
        <td><%= date_formatter service.start_time %></td>
        <td><%= date_formatter service.end_time %></td>
        <td><%= number_to_currency(service.amount) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>