<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render 'layouts/header' %>
  <div class="wrapper">
    <!-- Sidebar Holder -->
    <% if logged_in? %>
      <%= render 'layouts/side_navbar' %>
      <!-- Page Content Holder -->
      <div id="content">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><h4 class="alert-heading"><%= message %></h4></div>
        <% end %>
        <div class="row">
          <div class="col s12" id="admin">
            <div class="card material-table">
              <%= yield %>
            </div>
          </div>
        </div>
        </div>
      </div>
    <% else %>

      <%= yield %>
    <% end %>
  </div>





  </body>
</html>
