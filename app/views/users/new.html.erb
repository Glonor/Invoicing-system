<div class="container" id="signin">
  <%= bootstrap_form_for(@user, :html => {:class=> 'form'}) do |f| %>
    <label for="inputFirstName" class="sr-only">First Name</label>
    <%= f.text_field :first_name %>
    <label for="inputLastName" class="sr-only">Last Name</label>
    <%= f.text_field :last_name %>
    <label for="inputEmail" class="sr-only">Email address</label>
    <%= f.email_field :email %>
    <label for="inputPassword" class="sr-only">Password</label>
    <%= f.password_field :password%>
    <label for="inputPassword" class="sr-only">Passowrd Confirm</label>
    <%= f.password_field :password_confirmation %>

    <button class= "btn btn-raised btn-primary btn-lg btn-block" id="btn-submit" type="submit">Sign up</button>
  <% end %>
</div>